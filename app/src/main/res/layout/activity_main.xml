<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="?attr/colorPrimaryFixedDim"
    android:padding="34sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textSize="67sp"
        android:textColor="@color/black"
        android:layout_marginTop="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="23sp"
        android:onClick="cl"
        android:textColor="@color/black"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="29sp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="58dp"
            android:text=""
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button
            android:id="@+id/btn2"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="58dp"
            android:text=""
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button android:id="@+id/btn3"
            android:layout_width="58dp"
            android:text=""
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button android:id="@+id/btn4"
            android:layout_width="58dp"
            android:text=""
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button
            android:id="@+id/btn5"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="58dp"
            android:text=""
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button android:id="@+id/btn6"
            android:layout_width="58dp"
            android:text=""
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button android:id="@+id/btn7"
            android:layout_width="58dp"
            android:text=""
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button
            android:id="@+id/btn8"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="58dp"
            android:text=""
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>

        <Button android:id="@+id/btn9"
            android:layout_width="58dp"
            android:text=""
            android:onClick="click"
            android:backgroundTint="@android:color/holo_orange_dark"/>


    </GridLayout>


    <TextView
        android:id="@+id/result"
        android:layout_width="346dp"
        android:layout_height="90dp"
        android:layout_marginTop="24sp"
        android:layout_marginRight="2sp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp" />

    <Button
        android:id="@+id/restart"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27sp"
        android:backgroundTint="@color/white"
        android:text="Restart"
        android:textColor="@color/black"
        android:onClick="cl"/>

    <Button
        android:id="@+id/rematch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rematch"
        android:layout_marginTop="23dp"
        android:onClick="cl"
        android:textColor="@color/black"
        android:backgroundTint="@color/material_dynamic_secondary50"/>


</LinearLayout>